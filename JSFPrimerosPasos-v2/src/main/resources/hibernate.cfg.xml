<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.mariadb.jdbc.Driver</property>
        <property name="hibernate.connection.password">mitocode</property>
        <property name="hibernate.connection.url">jdbc:mariadb://localhost:3306/mitocode</property>
        <property name="hibernate.connection.username">mitocode</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MariaDB53Dialect</property>
        <mapping class="com.webproject.entity.User"/>
        <mapping class="com.webproject.entity.Employee"/>
    </session-factory>
</hibernate-configuration>
